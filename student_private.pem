from cryptography.hazmat.primitives.asymmetric import rsa
from cryptography.hazmat.primitives import serialization
from cryptography.hazmat.primitives import hashes

def generate_rsa_keypair(key_size: int = 4096):
    """
    Generates an RSA 4096-bit key pair using the required parameters.

    Returns:
        Tuple[private_key_pem, public_key_pem]: PEM-formatted key strings.
    """
    # 1. Generate the private key
    # Use 65537 (0x10001) as the public exponent
    private_key = rsa.generate_private_key(
        public_exponent=65537,
        key_size=key_size
    )

    # 2. Serialize the private key to PEM format
    # It must be unencrypted (NoEncryption) as it is required for the Docker build
    # and will be stored publicly as per the instructions.
    private_pem = private_key.private_bytes(
        encoding=serialization.Encoding.PEM,
        format=serialization.PrivateFormat.PKCS8,
        encryption_algorithm=serialization.NoEncryption()
    )

    # 3. Get the public key from the private key
    public_key = private_key.public_key()

    # 4. Serialize the public key to PEM format
    public_pem = public_key.public_bytes(
        encoding=serialization.Encoding.PEM,
        format=serialization.PublicFormat.SubjectPublicKeyInfo
    )

    # Decode bytes to string for easier saving
    return private_pem.decode('utf-8'), public_pem.decode('utf-8')

# Call the function to get the keys
private_key_pem_str, public_key_pem_str = generate_rsa_keypair()

# --- Saving Files ---
# Save the private key
with open("student_private.pem", "w") as f:
    f.write(private_key_pem_str)

# Save the public key
with open("student_public.pem", "w") as f:
    f.write(public_key_pem_str)

print("RSA 4096-bit key pair generated and saved.")
print("student_private.pem and student_public.pem are ready.")